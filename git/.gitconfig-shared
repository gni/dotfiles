[init]
	defaultBranch = main

[core]
	editor = vim
	autocrlf = input
	pager = less -FRX

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[alias]
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	lg = log --oneline --graph --decorate --all
	ll = log --pretty=format:'%C(yellow)%h%Creset %s %C(green)(%cr)%Creset %C(blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	stash-all = stash save --include-untracked
	branches = branch -a
	remotes = remote -v
	tags = tag -l
	wip = !git add -A && git commit -m 'WIP'

[color]
	ui = auto

[rerere]
	enabled = true
